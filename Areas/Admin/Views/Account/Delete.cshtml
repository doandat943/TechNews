@model TechNews.Models.Account;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Confirm to delete a post</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="AccountId">PostID</label>
            <input type="text" class="form-control mb-3" asp-for="AccountId" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Name">Title</label>
            <input type="text" class="form-control mb-3" asp-for="Name" disabled />
        </div>
    </div>
    <form asp-action="Delete" method="Account">
        <input type="hidden" asp-for="AccountId" />
        <a class="btn btn-1g btn-warning" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Go back
        </a>
        <button type="submit" class="btn btn-1g btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
    </form>
</main>
@{
    var summerNote = new TechNews.Areas.Admin.Models.SummerNote("#Content");
    <partial name="_SummerNote" model="summerNote" />
}