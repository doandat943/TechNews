@using TechNews.Ultilities
@model TechNews.Models.Post;
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h4>Post management > Add a new post</h4>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create" method="Post">
                    <div class="form-group">
                        <label>Danh muc</label>
                        <select asp-for="MenuId" class="form-control"
                            asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))" id="MenuId">
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Title</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger mb-4"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Summary</label>
                        <textarea asp-for="Summary" class="form-control" rows="6"> </textarea>
                        <span asp-validation-for="Summary" class="text-danger mb-4"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Content</label>
                        <textarea asp-for="Content" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger mb-4"></span>
                    </div>

                    <div class="form-group d-none">
                        <input asp-for="CreatedDate" class="form-control" value="@DateTime.Now" />
                    </div>

                    <div class="from-group">
                        <label class="control-label">Image</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <button class="btn btn-success" type="button" onclick="openDialog()">Choose an
                                    image</button>
                            </div>
                            <input type="text" class="form-control" asp-for="Image" id="file_input"
                                aria-describedby="button-addon2">
                        </div>
                    </div>

                    <div class="form-group">
                        <label>
                            @Html.CheckBox("IsActive", false)
                            Visible
                        </label>
                    </div>

                    <div class="form-group d-none">
                        <input asp-for="AuthorId" class="form-control" value="admin" />
                    </div>

                    <div class="form-group mt-5">
                        <button type="submit" value="Create" class="btn btn-primary" asp-action="Create"
                            onclick="return checkValue()">Save Information </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
@{
    var summerNote = new TechNews.Areas.Admin.Models.SummerNote("#Content");
    <partial name="_SummerNote" model="summerNote" />
}