@model TechNews.Models.Menu;

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Confirm to delete a menu</h2>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="MenuID">MenuID</label>
            <input type="text" class="form-control mb-3" asp-for="MenuID" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="MenuName">MenuName</label>
            <input type="text" class="form-control mb-3" asp-for="MenuName" disabled />
        </div>
    </div>

    <form asp-action="Delete" method="Post">
        <input type="hidden" asp-for="MenuID" />

        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Go Back
        </a>

        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash"></i> Delete
        </button>
    </form>
</main>